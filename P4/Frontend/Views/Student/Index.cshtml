@{
    ViewData["Title"] = "ArcherHub";
}

<style>
    body {
        background: linear-gradient(135deg, #e0f7fa, #ffffff);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .dashboard-square-link {
        display: block; 
        text-decoration: none; 
        color: inherit; 
    }

    .dashboard-square {
        width: 100%;
        height: 250px;
        background-color: #ffffff;
        display: flex;
        flex-direction: column; 
        align-items: center;
        justify-content: center;
        border-radius: 15px;
        overflow: hidden;
        position: relative;
        text-align: center; 
        cursor: pointer;
        box-shadow: 0 6px 15px rgba(0, 0, 0, 0.1);
        transition: all 0.3s ease-in-out;
    }

    .dashboard-square:hover {
        background-color: #e0f7fa;
        transform: translateY(-5px);
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.15);
    }

    .dashboard-square i {
        margin-bottom: 10px;
        color: #007bff;
    }

    .dashboard-square h5 {
        font-size: 18px;
        color: #007bff;
    }
</style>

<div class="container mt-5">
    <div class="row g-4">
        <div class="col-md-6">
            <a href="@Url.Action("Enlist", "Course")" class="dashboard-square-link">
                <div class="dashboard-square">
                    <i class="fas fa-list fa-3x mb-2"></i>
                    <h5>Enlist Course</h5>
                </div>
            </a>
        </div>
        <div class="col-md-6">
            <a href="@Url.Action("CurrentCourses", "Course")" class="dashboard-square-link">
                <div class="dashboard-square">
                    <i class="fas fa-book fa-3x mb-2"></i>
                    <h5>View Current Courses</h5>
                </div>
            </a>
        </div>
        <div class="col-md-6">
            <a href="@Url.Action("AvailableCourses", "Course")" class="dashboard-square-link">
                <div class="dashboard-square">
                    <i class="fas fa-book-open fa-3x mb-2"></i>
                    <h5>View Available Courses</h5>
                </div>
            </a>
        </div>
        <div class="col-md-6">
            <a href="@Url.Action("PreviousGrades", "Course")" class="dashboard-square-link">
                <div class="dashboard-square">
                    <i class="fas fa-graduation-cap fa-3x mb-2"></i>
                    <h5>View Previous Grades</h5>
                </div>
            </a>
        </div>
    </div>
</div>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
