@model List<CourseModel>
@{
    ViewData["Title"] = "View Current Courses - ArcherHub";
}

<style>
    body {
        background: linear-gradient(135deg, #e0f7fa, #ffffff);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .action-bar {
        margin: 40px auto 20px auto;
        max-width: 900px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        gap: 1rem;
        flex-wrap: wrap;
    }

    .courses-table-container {
        max-width: 900px;
        margin: 0 auto;
        background-color: #ffffff;
        border-radius: 15px;
        padding: 20px;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
    }

    .course-row {
        padding: 10px 0;
        border-bottom: 1px solid #ddd;
    }

    .action-btn {
        border: none;
        background: none;
        padding: 5px 10px;
        font-size: 1.2rem;
        cursor: pointer;
        transition: color 0.2s ease;
    }

    .action-btn.minus {
        color: #dc3545;
    }

    .action-btn.minus:hover {
        color: #bd2130;
    }
</style>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />

<div class="courses-table-container">
    <h3>Your Current Courses</h3>
    <div id="coursesList">
        @if (Model != null && Model.Any())
        {
            foreach (var course in Model)
            {
                <div class="course-row">
                    <div class="d-flex justify-content-between">
                        <div class="course-info">
                            <strong>@course.CourseID</strong> - @course.CourseName
                        </div>
                        <button class="action-btn minus" onclick="confirmRemoveCourse('@course.CourseID')">
                            <i class="fas fa-minus"></i>
                        </button>
                    </div>
                </div>
            }
        }
        else
        {
            <p class="text-center">You are not enrolled in any courses.</p>
        }
    </div>
</div>

<script>
    // Function to confirm removal of a course
    function confirmRemoveCourse(courseID) {
        const isConfirmed = confirm('Are you sure you want to remove this course from your list?');

        if (isConfirmed) {
            removeCourse(courseID);
        }
    }

    // Function to remove the course (AJAX request or form submission)
    function removeCourse(courseID) {
        fetch('/Course/RemoveFromStudentCourses', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify({
                courseID: courseID
            })
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                alert('Course removed successfully!');
                location.reload(); // Reload the page to update the course list
            } else {
                alert('Failed to remove the course.');
            }
        })
        .catch(error => console.error('Error:', error));
    }
</script>
